<% provide(:title, 'New Post') %>
<h1>Add a New Post</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@post) do |f| %>
	  <%= render 'shared/post_error_messages' %>
	
      <%= f.label :title %>
      <%= f.text_field :title %>

      <%= f.label :description %>
      <%= f.text_area :description %>

      <%= f.label :tags %>
      <%= f.text_field :tags %>
	  
      <%= f.submit "Add New Post", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>