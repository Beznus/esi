<% provide(:title, @user.name) %>
<div class="row">
  <aside class="span4">
    <section>
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
	</section>
	<section>
	  <h1>
	    Posts Added
	  </h1>
	  <% if !@posts.nil? %>
	    <%=render @posts %>
	  <% else %>
	    <p>No Posts Yet!</p>
	  <% end %>
    </section>
  </aside>
</div>